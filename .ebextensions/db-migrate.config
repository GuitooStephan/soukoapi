container_commands:
  01_migrate:
    command: "source /opt/python/run/venv/bin/activate && python3 /opt/python/ondeck/app/manage.py migrate --no-input"
    leader_only: true
  02_collectstatic:
    command: "source /opt/python/run/venv/bin/activate && python3 /opt/python/ondeck/app/manage.py collectstatic --no-input"
  03_createsu:
    command: "source /opt/python/run/venv/bin/activate && python3 /opt/python/ondeck/app/manage.py createsu"
  04_wsigpass:
    command: 'echo "WSGIPassAuthorization On" >> ../wsgi.conf'
